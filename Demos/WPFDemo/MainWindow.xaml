<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        Width="600" Height="600" Top="100" Left="100"
        Title="NORI Demos" WindowState="Maximized" Background="Black">
   <Window.Resources>
      <Style TargetType="Button">
         <Setter Property="Margin" Value="4,0,4,4" />
         <Setter Property="Padding" Value="7,1,7,1" />
      </Style>
   </Window.Resources>
   <DockPanel>
      <StackPanel DockPanel.Dock="Left" Background="#888">
         <Button Margin="4" Click="LeafDemo">Polygon Fill</Button>
         <Button Click="LineFontDemo">Line Fonts</Button>
         <Button Click="TrueTypeDemo">TrueType Text</Button>
         <Button Click="MeshDemo">Load TMesh</Button>
         <Button Click="TessDemo">Tessellation</Button>
         <Button Click="BooleanDemo">Poly Boolean</Button>
         <Button Click="DwgDemo">Load DXF</Button>
         <Button Click="RobotDemo">Robot IK/FK</Button>
         <Button Click="STPDemo">Load STEP</Button>
         <Button Click="StreamDemo">Streaming</Button>
         <Button Click="AABBTreeDemo">AABB Tree</Button>
         <Button Click="MinSphereDemo">Min. Sphere</Button>
         <Button Click="T3XReaderDemo">Load T3X File</Button>
         <Button Click="SliceMeshDemo">Slice Mesh</Button>
         <Button Click="ConvexHullDemo">Convex Hull</Button>
      </StackPanel>
         <StackPanel Name="mSettings" DockPanel.Dock="Right" Background="#AAA" />
      <Border Name="mContent" />
   </DockPanel>
</Window>
