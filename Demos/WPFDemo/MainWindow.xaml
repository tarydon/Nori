<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        Width="600" Height="600" Top="100" Left="100"
        Title="MainWindow" WindowState="Maximized" Background="Black">
   <Window.Resources>
      <Style TargetType="Button">
         <Setter Property="Margin" Value="6,0,6,6" />
         <Setter Property="Padding" Value="8,2,8,2" />
      </Style>
   </Window.Resources>
   <DockPanel>
      <StackPanel DockPanel.Dock="Left" Background="#888">
         <Button Margin="6" Click="LeafDemo">Leaf Demo</Button>
         <Button Click="LineFontDemo">LineFont Demo</Button>
         <Button Click="TrueTypeDemo">TrueType Demo</Button>
         <Button Click="MeshDemo">Mesh Demo</Button>
      </StackPanel>
      <Border Name="mContent" />
   </DockPanel>
</Window>
