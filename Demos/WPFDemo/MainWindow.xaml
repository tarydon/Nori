<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        Width="600" Height="600" Top="100" Left="100"
        Title="MainWindow" WindowState="Maximized" Background="Black">
   <Window.Resources>
      <Style TargetType="Button">
         <Setter Property="Margin" Value="4,0,4,4" />
         <Setter Property="Padding" Value="7,1,7,1" />
      </Style>
   </Window.Resources>
   <DockPanel>
      <StackPanel DockPanel.Dock="Left" Background="#888">
         <Button Margin="4" Click="LeafDemo">Leaf Demo</Button>
         <Button Click="LineFontDemo">LineFont Demo</Button>
         <Button Click="TrueTypeDemo">TrueType Demo</Button>
         <Button Click="MeshDemo">Mesh Demo</Button>
         <Button Click="TessDemo">Tessellation Demo</Button>
         <Button Click="BooleanDemo">Boolean Demo</Button>
         <Button Click="DwgDemo">Drawing Demo</Button>
         <Button Click="RobotDemo">Robot Demo</Button>
      </StackPanel>
      <StackPanel Name="mSettings" DockPanel.Dock="Right" Background="#888" />
      <Border Name="mContent" />
   </DockPanel>
</Window>
